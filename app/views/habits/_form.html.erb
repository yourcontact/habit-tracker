<%= simple_form_for(@habit) do |f| %>
  <% if @habit.errors.any? %>
  <h3>You have these errors:</h3>
  <ul>
    <% @habit.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12-col-sm-4-col-sm-offset-4">
      <div class="form-habit">
        <div class="form-inputs">
            <%= f.input :name, required: true %>
            <%= f.input :reminder, required: true, :style => 'display: flex;'%>
          </div>
          <div class="form-actions form-habit-submit">
            <%= f.button  :submit %>
          </div>
          <div id="delete-btn">
            <% if !current_page?('/habits/new') %>
            <p><%= link_to 'Give up/delete', habit_path, method: :delete %></p>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>

<% end %>
